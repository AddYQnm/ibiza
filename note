"use client";
import {
  Navbar,
  NavBody,
  NavItems,
  MobileNav,
  NavbarLogo,
  NavbarButton,
  MobileNavHeader,
  MobileNavToggle,
  MobileNavMenu,
} from "@/components/ui/resizable-navbar";
import { useState } from "react";
import { ContainerScroll } from "./ui/container-scroll-animation";
import HeroVideo from "./HeroVideo";
import EditorialSection from "./EditorialSection";
import { Skiper48 } from "./HiIbizaStackCards";
import MusicCarousel from "./MusicCarousel";
import { InstagramSection } from "./InstagramSection";
import AboutIbizaSection from "./AboutIbizaSection";
import HiIbizaBackground from "./HiIbizaBackground";

export function NavbarDemo() {
  const navItems = [
    {
      name: "Accueil",
      link: "#home", // section HeroVideo / page d'accueil
    },
 {
      name: "Réservation",
      link: "/reservation", // redirection vers page contact formulaire
    },
    {
      name: "Events",
      link: "#agenda", // section Shotgun + événements à venir
    },                                                                                                                                                                
  ];

  const [isMobileMenuOpen, setIsMobileMenuOpen] = useState(false);

  return (
    <div className="relative w-full mt-[-100px] bg-gradient-to-br from-[#EBEDF0] via-[#E2DFFF] to-[#D3F4FF]">
         
      <Navbar>
        {/* Desktop Navigation */}
        <NavBody>
          <NavbarLogo />
          <NavItems items={navItems} />
          <div className="flex items-center gap-4">
            <NavbarButton variant="secondary">Login</NavbarButton>
            <NavbarButton variant="primary">Contact</NavbarButton>
          </div>
        </NavBody>

        {/* Mobile Navigation */}
        <MobileNav>
          <MobileNavHeader>
            <NavbarLogo />
            <MobileNavToggle
              isOpen={isMobileMenuOpen}
              onClick={() => setIsMobileMenuOpen(!isMobileMenuOpen)}
            />
          </MobileNavHeader>

          <MobileNavMenu
            isOpen={isMobileMenuOpen}
            onClose={() => setIsMobileMenuOpen(false)}
          >
            {navItems.map((item, idx) => (
              <a
                key={`mobile-link-${idx}`}
                href={item.link}
                onClick={() => setIsMobileMenuOpen(false)}
                className="relative text-neutral-600 dark:text-neutral-300"
              >
                <span className="block">{item.name}</span>
              </a>
            ))}
            <div className="flex w-full flex-col gap-4">
              <NavbarButton
                onClick={() => setIsMobileMenuOpen(false)}
                variant="primary"
                className="w-full"
              >
                Login
              </NavbarButton>
              <NavbarButton
                onClick={() => setIsMobileMenuOpen(false)}
                variant="primary"
                className="w-full"
              >
                Book a call
              </NavbarButton>
            </div>
          </MobileNavMenu>
        </MobileNav>
      </Navbar>
      <HiIbizaBackground >   
        <HeroVideo />
          
          <EditorialSection />
      
      
      
      <Skiper48 />
      
            <AboutIbizaSection   />

      <main>
        
            <MusicCarousel />
      
          </main>
      <InstagramSection />
</HiIbizaBackground>
      {/* Navbar */}
    </div>
  );
}

